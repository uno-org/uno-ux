{
  "extends": "@uno-ux/shared/configs/tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": []
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ]
}
